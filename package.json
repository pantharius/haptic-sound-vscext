{
  "name": "haptic-sound-vscext",
  "displayName": "Haptic Sound",
  "description": "Enhance your VS Code typing experience with haptic sound effects.",
  "version": "0.0.1",
  "publisher": "pantharius",
  "engines": {
    "vscode": "^1.98.0"
  },
  "homepage": "https://github.com/pantharius/haptic-sound-vscext",
  "repository": {
    "type": "git",
    "url": "https://github.com/pantharius/haptic-sound-vscext.git"
  },
  "bugs": {
    "url": "https://github.com/pantharius/haptic-sound-vscext/issues"
  },
  "icon": "icon.webp",
  "keywords": [
    "sound",
    "keyboard",
    "typing",
    "haptic",
    "typewriter"
  ],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onDidOpenTextDocument"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Haptic Sounds",
      "properties": {
        "typewriterSounds.keySound": {
          "type": "string",
          "default": "",
          "description": "Path to the sound file for typing keys."
        },
        "typewriterSounds.backspaceSound": {
          "type": "string",
          "default": "",
          "description": "Path to the sound file for backspace/delete."
        },
        "typewriterSounds.saveSound": {
          "type": "string",
          "default": "",
          "description": "Path to the sound file for saving files (e.g., carriage return)."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "globals": "^16.5.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "node-web-audio-api": "^1.0.3",
    "play-sound": "^1.1.6",
    "sound-play": "^1.1.0"
  }
}
